BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            on_text: app.handle_convert()
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        on_press: app.handle_convert()
#        text: 'Convert miles to km'

    Label:
        text: app.message
        font_size: 48
        color: (1, 1, 0, 1)